<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view -->
        <record id="view_move_form_inherit_bstt" model="ir.ui.view">
            <field name="name">view.move.form.inherit.bstt</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='narration']" position="before">
                    <group>
                        <field name="reserved_note"
                               invisible="move_type not in ['out_invoice','out_refund','out_receipt']"/>
                        <field name="reserved_amount"
                               invisible="move_type not in ['out_invoice','out_refund','out_receipt']"/>
                    </group>
                    <group></group>
                </xpath>
                <xpath expr="//group[@id='header_right_group']" position="after">
                    <group>
                        <field name="subj_ar"
                               invisible="move_type not in ['out_invoice','out_refund','out_receipt']"/>
                        <field name="contract_ref_ar"
                               invisible="move_type not in ['out_invoice','out_refund','out_receipt']"/>
                        <field name="contract_value_ar"
                               invisible="move_type not in ['out_invoice','out_refund','out_receipt']"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>